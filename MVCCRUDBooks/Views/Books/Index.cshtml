@* using MVCCRUDBooks.Models.Entities *@
@* @model List<MVCCRUDBooks.Models.Entities.Book> *@
@* @model List<Book> *@
@model BooksViewModel


@{
    ViewData["Title"] = "Book List";
}

<div class="text-center">
    <table class="table table-bordered">
        <tr>
             <td>Id</td>
             <td>Titulo</td>
             <td>Categoria</td>
             <td>Autor</td>
             <td>FechaEdicion</td>
             <td>Editora</td>
        </tr>

        <tr>
            <td colspan="6"> All Books</td>
        </tr>
        @foreach(var item in Model.AllBooks)
        {
             <tr>
                <td>@item.Id</td>
                <td>@item.Titulo</td>
                <td>@item.Categoria</td>
                <td>@item.Autor</td>
                <td>@item.FechaEdicion</td>
                <td>@item.Editora</td>
            </tr>
        }
    </table>
</div>
